{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "extt",
  "version": "0.1.0",
  "identifier": "com.extt.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "zoomHotkeysEnabled": true,
        "title": "extt",
        "label": "main",
        "width": 1024,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "hiddenTitle": true,
        "transparent": true,
        "trafficLightPosition": {
          "x": 12,
          "y": 18
        },
        "decorations": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
